<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="30dp"
    tools:context=".OrderDetailsActivity">

    <TextView
        android:id="@+id/orderID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Order ID"
        android:textColor="@color/black"
        android:textSize="20dp"
        tools:layout_editor_absoluteX="171dp"
        tools:layout_editor_absoluteY="155dp" />

    <TextView
        android:id="@+id/detailFullName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Full Name"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:layout_marginTop="10dp"
        tools:layout_editor_absoluteX="171dp"
        tools:layout_editor_absoluteY="155dp" />

    <TextView
        android:id="@+id/detailMobileNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mobile Number"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:layout_marginTop="10dp"
        tools:layout_editor_absoluteX="171dp"
        tools:layout_editor_absoluteY="155dp" />

    <TextView
        android:id="@+id/detailEmailAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:layout_marginTop="10dp"
        tools:layout_editor_absoluteX="171dp"
        tools:layout_editor_absoluteY="155dp" />

    <TextView
        android:id="@+id/detailShippingAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Shipping Address"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:layout_marginTop="10dp"
        tools:layout_editor_absoluteX="171dp"
        tools:layout_editor_absoluteY="155dp" />

    <TextView
        android:id="@+id/detailCardNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Card Number"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:layout_marginTop="10dp"
        tools:layout_editor_absoluteX="171dp"
        tools:layout_editor_absoluteY="155dp" />

    <TextView
        android:id="@+id/detailExpiryDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Expiry Date"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:layout_marginTop="10dp"
        tools:layout_editor_absoluteX="171dp"
        tools:layout_editor_absoluteY="155dp" />

    <TextView
        android:id="@+id/detailSecurityCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Security Code"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:layout_marginTop="10dp"
        tools:layout_editor_absoluteX="171dp"
        tools:layout_editor_absoluteY="155dp" />

    <TextView
        android:id="@+id/detailCardHolderName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Card Holder Name"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:layout_marginTop="10dp"
        tools:layout_editor_absoluteX="171dp"
        tools:layout_editor_absoluteY="155dp" />

    <TextView
        android:id="@+id/detailGrandTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:layout_marginTop="10dp"
        tools:layout_editor_absoluteX="171dp"
        tools:layout_editor_absoluteY="155dp" />

    <TextView
        android:id="@+id/productDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Product Details"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:layout_marginTop="10dp"
        tools:layout_editor_absoluteX="171dp"
        tools:layout_editor_absoluteY="155dp" />
</LinearLayout>