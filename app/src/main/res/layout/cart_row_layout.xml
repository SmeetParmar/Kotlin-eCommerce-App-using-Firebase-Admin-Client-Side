<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_margin="20dp"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="80dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

        <ImageView
            android:layout_width="115dp"
            android:layout_height="115dp"
            android:src="@drawable/ic_launcher_foreground"
            android:id="@+id/toyImage"></ImageView>

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_marginStart="7dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/toyName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Toy Name"
                android:textSize="20dp"
                android:textColor="@color/black"></TextView>

            <TextView
                android:id="@+id/toyPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Toy Price"
                android:textSize="20dp"
                android:textColor="@color/black"></TextView>

            <TextView
                android:id="@+id/toyQuantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Toy Quantity"
                android:textSize="20dp"
                android:textColor="@color/black"></TextView>

            <TextView
                android:id="@+id/toyTotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Toy Quantity"
                android:textSize="20dp"
                android:textColor="@color/black"></TextView>



        </LinearLayout>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:gravity="center"

                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:id="@+id/deleteToyFromCart"
                        android:src="@drawable/baseline_delete_forever_24">

                    </ImageView>

                </RelativeLayout>

            </LinearLayout>



        </androidx.cardview.widget.CardView>



    </LinearLayout>